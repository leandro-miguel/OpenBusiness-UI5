<mvc:View
	controllerName="openBusiness.controller.cliente.List"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	height="100%"
	busyIndicatorDelay="0"
>
	<f:DynamicPage
		id="dynamicPageId"
		headerExpanded="{/headerExpanded}"
		toggleHeaderOnTitleClick="{/titleClickable}"
	>
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<HBox direction="RowReverse">
						<Title text="{i18n>titleListClient}" />
					</HBox>
				</f:heading>
				<f:snappedContent>
					<Label text="Brasil"/>
				</f:snappedContent>
				<f:snappedTitleOnMobile>
					<Title text="Pedidos"/>
				</f:snappedTitleOnMobile>
			</f:DynamicPageTitle>
		</f:title>
		<!-- Flexbox é uma boa escolha-->
		<f:header>
			<f:DynamicPageHeader>
				<OverflowToolbar>
					<Label text="Nome"/>
					<SearchField liveChange=".onSearch" width="89%"/>
					<Button
						activeIcon=""
						icon=""
						iconFirst="false"
						text="Pesquisar"
						textDirection="RTL"
						width="auto"
						press="onSearch">
					</Button>
				</OverflowToolbar>
			</f:DynamicPageHeader>
		</f:header>
		
		<f:content>
			<Table
				id="clientTable"
				items="{oModelClientList>/clients}"
				busy="{oModelClientList>/clientsBusy}"
				mode="SingleSelectMaster"
				selectionChange="navToDetail">
				<headerToolbar>
					<Toolbar>
						<Title
							text="{oModelClientList>/Title}"
							level="H2"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="{i18n>nameClients}"/>
					</Column>
					<Column >
						<Text text="{i18n>telClients}"/>
					</Column>
					<Column>
						<Text text="{i18n>cpf}"/>
					</Column>
					<Column>
						<Text text="{i18n>city}"/>
					</Column>
					<Column hAlign="End">
						<Text text=""/>
					</Column>
				</columns>
				<items>
					<!-- A cor da tabela tem como base o status de aprovaçao -->
					<ColumnListItem>
						<cells>
						
							<!-- nome -->
							<Label text="{oModelClientList>firstname} {oModelClientList>lastname}"/>
							<!-- telefone -->
							<Label text="{oModelClientList>phone1}"/>
							<!-- cpf -->
							<Label text="{oModelClientList>cpf}"/>
							<!-- city -->
							<Label text="{oModelClientList>city}"/>		
							<!-- navbar -->
							<Button
								width="10px"
								icon="sap-icon://feeder-arrow"
								type="Transparent"
								press="navToDetail"
							>
							</Button>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>