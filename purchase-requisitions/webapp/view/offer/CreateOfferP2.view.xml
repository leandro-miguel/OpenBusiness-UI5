<mvc:View
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	controllerName="requisitions.requisitions.controller.offer.createOfferP2"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:layout="sap.ui.layout"
>
	<ObjectPageLayout
		id="createOfferP2ViewID"
		showFooter="true"
	>
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title
						text="{i18n>newOffer}"
						wrapping="true"
					/>
				</expandedHeading>
				<snappedHeading>
					<m:Title
						text="{i18n>newOffer}"
						wrapping="true"
					/>
				</snappedHeading>
				<expandedContent>
					<m:Text text="{ path: '/currentDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy - HH:mm:ss' } }"/>
				</expandedContent>
				<snappedContent>
					<m:Text text="{ path: '/currentDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy - HH:mm:ss' } }"/>
				</snappedContent>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<sections>
			<ObjectPageSection
				titleUppercase="false"
				title="{i18n>itemXprovider}"
			>
				<subSections>
					<ObjectPageSubSection
						titleUppercase="false"
						mode="Expanded"
					>
						<blocks>
							<m:FlexBox
								items="{ path: 'oModelCreateOffer>/itensXprovider'}"
								direction="Column"
								alignItems="Start"
							>
								<m:items>
									<m:Table
										items="{oModelCreateOffer>itens}"
										class="sapUiMediumMarginBottom"
										mode="MultiSelect"
									>
										<m:headerToolbar>
											<m:OverflowToolbar>
												<m:Title
													text="{oModelCreateOffer>providerName}"
													level="H2"
												/>
												<m:ToolbarSpacer/>
												<m:Button
													text="{i18n>include}"
													type="Emphasized"
													press=".onAdd"
												/>
												<m:Button
													text="{i18n>exclude}"
													type="Default"
													press=".onDelete($event, ${oModelCreateOffer>provider})"
												/>
											</m:OverflowToolbar>
										</m:headerToolbar>
										<m:columns>
											<m:Column width="3rem">
												<m:Text text="#"/>
											</m:Column>
											<m:Column>
												<m:Text text="{i18n>code}"/>
											</m:Column>
											<m:Column>
												<m:Text text="{i18n>name}"/>
											</m:Column>
											<m:Column>
												<m:Text text="{i18n>status}"/>
											</m:Column>
										</m:columns>
										<m:items>
											<m:ColumnListItem selected="{oModelCreateOffer>selected}">
												<m:cells>
													<m:Label text="{oModelCreateOffer>lineIdItem}"/>
													<m:Label text="{oModelCreateOffer>itemCode}"/>
													<m:Label text="{oModelCreateOffer>itemDescription}"/>
													<m:Label text="{oModelCreateOffer>status}"/>
												</m:cells>
											</m:ColumnListItem>
										</m:items>
									</m:Table>
								</m:items>
							</m:FlexBox>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button
					type="Emphasized"
					text="{i18n>saveOffer}"
					press="onSaveOffer('Gravar')"
					enabled="{oModelCreateOffer>/SaveEnabled}"
				/>
				<m:Button
					type="Emphasized"
					text="{i18n>saveAndSendOffer}"
					press="onSaveOffer('Gravar_Enviar')"
					enabled="{oModelCreateOffer>/SaveEnabled}"
				/>
				<m:Button
					type="Default"
					text="{i18n>cancel}"
					press="onNavBack"
				/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>