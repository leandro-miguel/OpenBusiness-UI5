<core:FragmentDefinition fragmentName="CategoryHelpDialog"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" >
	<Dialog title="{i18n>category}" class="sapUiContentPadding" contentHeight="80%">
		<content>
			<OverflowToolbar>
				<SearchField search=".onCategoryHelpSearch" width="100%" />
			</OverflowToolbar>
			<List
				id="CategoryList"
				items="{oModel>/Category}"
				busy="{oModel>/CategoryBusy}"
				mode="SingleSelectMaster"
				selectionChange="onCategoryHelpSave"
				includeItemInSelection="true">
				<StandardListItem
					title="{oModel>U_Nome_Categ}"
					selected="{oModel>U_Nome_CategSelected}"/>
			</List>
		</content>
		<buttons>
			<Button icon="sap-icon://arrow-left" press="onCategoryHelpPrevious" type="Emphasized" enabled="{oModel>/previousDialogButtonEnabled}"/>
			<Button icon="sap-icon://arrow-right" press="onCategoryHelpNext" type="Emphasized" enabled="{oModel>/nextDialogButtonEnabled}"/>
			<Button text="{i18n>cancel}" press="onCategoryHelpClose" type="Ghost"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>