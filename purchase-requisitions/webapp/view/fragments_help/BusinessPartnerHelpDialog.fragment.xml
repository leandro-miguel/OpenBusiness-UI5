<core:FragmentDefinition fragmentName="BusinessPartnerHelpDialog"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" >
	<Dialog title="{i18n>provider}" class="sapUiContentPadding" contentHeight="80%">
		<content>
			<OverflowToolbar>
				<SearchField search=".onBusinessPartnerHelpSearch" width="100%" />
			</OverflowToolbar>
			<List
				items="{oModel>/BusinessPartner}"
				busy="{oModel>/BusinessPartnerBusy}"
				mode="SingleSelectMaster"
				selectionChange="onBusinessPartnerHelpSave"
				includeItemInSelection="true">
				<StandardListItem
					title="{oModel>CardCode}"
					selected="{oModel>CardCodeSelected}"
					description="{oModel>CardName}" />
			</List>
		</content>
		<buttons>
			<Button icon="sap-icon://arrow-left" press="onBusinessPartnerHelpPrevious" type="Emphasized" enabled="{oModel>/previousDialogButtonEnabled}"/>
			<Button icon="sap-icon://arrow-right" press="onBusinessPartnerHelpNext" type="Emphasized" enabled="{oModel>/nextDialogButtonEnabled}"/>
			<Button text="{i18n>cancel}" press="onBusinessPartnerHelpClose" type="Ghost"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>