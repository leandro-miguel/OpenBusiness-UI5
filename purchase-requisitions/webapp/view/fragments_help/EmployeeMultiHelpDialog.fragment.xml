<core:FragmentDefinition fragmentName="employeeMultiHelpDialog"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" >
	<Dialog title="{i18n>requester}" class="sapUiContentPadding" contentHeight="80%">
		<content>
			<OverflowToolbar>
				<SearchField search=".onEmployeeMultiHelpSearch" width="100%" />
			</OverflowToolbar>
			<List
				id="employeeMultiList"
				items="{oModel>/EmployeeList}"
				busy="{oModel>/employeeListDialogBusy}"
				mode="MultiSelect"
				includeItemInSelection="true">
				<StandardListItem
					title="{oModel>FirstName} {oModel>LastName}"
					description="{oModel>EmployeeID}" />
			</List>
		</content>
		<buttons>
			<Button icon="sap-icon://arrow-left" press="onEmployeeMultiHelpPrevious" enabled="{oModel>/previousDialogButtonEnabled}"  type="Emphasized"/>
			<Button icon="sap-icon://arrow-right" press="onEmployeeMultiHelpNext" enabled="{oModel>/nextDialogButtonEnabled}" type="Emphasized"/>
			<Button text="{i18n>save}" press="onEmployeeMultiHelpSave" type="Emphasized"/>
			<Button text="{i18n>cancel}" press="onEmployeeMultiHelpClose" type="Ghost"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>