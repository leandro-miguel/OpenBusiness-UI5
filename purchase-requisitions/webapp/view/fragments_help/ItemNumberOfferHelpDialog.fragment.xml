<core:FragmentDefinition
	fragmentName="itemNumberHelpDialog"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<Dialog
		title="{i18n>itemCode}"
		class="sapUiContentPadding"
		contentHeight="50rem"
	>
		<content>
			<OverflowToolbar>
				<Label text="{i18n>showItens}"/>
				<Switch
					id="itemTypeSwitch"
					type="AcceptReject"
					state="{oModelCreateOffer>/itemNumberType}"
					change="onSwitchItemNumberChanged"
				/>
			</OverflowToolbar>
			<SearchField
				search=".onItemNumberHelpSearch"
				width="100%"
			/>
			<List
				id="itemNumberList"
				items="{oModelCreateOffer>/itemNumber}"
				busy="{oModelCreateOffer>/itemNumberListDialogBusy}"
				mode="SingleSelectMaster"
				modeAnimationOn="false"
				selectionChange="onItemNumberHelpSave"
				includeItemInSelection="true"
			>
				<StandardListItem
					title="{oModelCreateOffer>ItemCode}"
					selected="{oModelCreateOffer>SelectedItemNumber}"
					description="{oModelCreateOffer>ItemName}"
				/>
			</List>
		</content>
		<buttons>
			<Button
				id="ItemNumberPrevious"
				icon="sap-icon://arrow-left"
				press="onItemNumberHelpPrevious"
				type="Emphasized"
				enabled="false"
			/>
			<Button
				id="ItemNumberNext"
				icon="sap-icon://arrow-right"
				press="onItemNumberHelpNext"
				type="Emphasized"
			/>
			<Button
				id="ItemNumberCancel"
				text="{i18n>cancel}"
				press="onItemNumberHelpClose"
				type="Ghost"
			/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>