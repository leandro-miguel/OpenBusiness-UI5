<core:FragmentDefinition fragmentName="shippingTypeHelpDialog"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" >
	<Dialog title="{i18n>sendType}" class="sapUiContentPadding" contentHeight="80%">
		<content>
			<OverflowToolbar>
				<SearchField search=".onShippingTypeHelpSearch" width="100%" />
			</OverflowToolbar>
			<List
				id="sTypeList"
				items="{oModel>/shippingCode}"
				busy="{oModel>/shippingTypesBusy}"
				mode="SingleSelectMaster" 
				selectionChange="onShippingTypeHelpSave"
				includeItemInSelection="true">
				<StandardListItem
					title="{oModel>Name}"
					description="{oModel>Code}"
					selected="{oModel>ShippingTypeSelected}" />
			</List>
		</content>
		<buttons>
			<Button id="STypePrevious" icon="sap-icon://arrow-left" press="onShippingTypeHelpPrevious" type="Emphasized" />
			<Button id="STypeNext" icon="sap-icon://arrow-right" press="onShippingTypeHelpNext" type="Emphasized"/>
			<Button id="STypeCancel" text="{i18n>cancel}" press="onShippingTypeHelpClose" type="Ghost"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>