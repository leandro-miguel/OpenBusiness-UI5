<core:FragmentDefinition fragmentName="projectHelpDialog"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" >
	<Dialog title="{i18n>projectCode}" class="sapUiContentPadding" contentHeight="80%">
		<content>
			<OverflowToolbar>
				<SearchField search=".onProjectHelpSearch" width="100%" />
			</OverflowToolbar>
			<List
				id="projectList"
				items="{oModel>/Projects}"
				busy="{oModel>/ProjectsBusy}"
				mode="SingleSelectMaster"
				selectionChange="onProjectHelpSave"
				includeItemInSelection="true">
				<StandardListItem
					title="{oModel>Name}"
					selected="{oModel>ProjectSelected}"
					description="{oModel>Code}" />
			</List>
		</content>
		<buttons>
			<Button icon="sap-icon://arrow-left" press="onProjectHelpPrevious" type="Emphasized" enabled="{oModel>/previousDialogButtonEnabled}"/>
			<Button icon="sap-icon://arrow-right" press="onProjectHelpNext" type="Emphasized" enabled="{oModel>/nextDialogButtonEnabled}"/>
			<Button text="{i18n>cancel}" press="onProjectHelpClose" type="Ghost"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>