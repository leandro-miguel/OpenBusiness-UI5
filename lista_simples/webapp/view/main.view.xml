<mvc:View 
    controllerName="treinamentoseidor2021.controller.main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
	xmlns:fb="sap.ui.comp.filterbar" 
	xmlns:f="sap.f"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	height="100%"
	busyIndicatorDelay="0">

		<f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}" toggleHeaderOnTitleClick="{/titleClickable}">
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<HBox direction="RowReverse">
							<Title text="{i18n>title}"/>
							<Image src="{oModelList>/svgLogo}"/>
						</HBox>
					</f:heading>
					<f:expandedContent>
						<Label text="The Best Run"/>
					</f:expandedContent>
					<f:snappedContent>
						<Label text="Brasil"/>
					</f:snappedContent>
					<f:snappedTitleOnMobile>
						<Title text="Pedidos"/>
					</f:snappedTitleOnMobile> 
				</f:DynamicPageTitle>
			</f:title>
			
			<!-- Flexbox é uma boa escolha-->
			<f:header>
				<f:DynamicPageHeader pinnable="true">
					<layout:HorizontalLayout allowWrapping="true">
						<layout:VerticalLayout class="sapUiMediumMarginEnd">
							<ObjectAttribute title="Location" text="Taubaté"/>
						</layout:VerticalLayout>

						<layout:VerticalLayout>
							<ObjectAttribute title="Availability"/>
									<ObjectStatus text="Treinamento" state="Success" />
						</layout:VerticalLayout>	
					</layout:HorizontalLayout>
				
					<fb:FilterBar reset="onReset" search="onSearch" showRestoreButton="true" showClearButton="true" showFilterConfiguration="true">
						<fb:filterGroupItems>
							<fb:FilterGroupItem groupName="__$INTERNAL$" name="A" label="Id Clientes" partOfCurrentVariant="true" visibleInFilterBar="true">
								<fb:control>
									<Input id="customerCod"
									placeholder="Código do cliente"
									value="{oModelList>/filtro1}"/>
								</fb:control>
							</fb:FilterGroupItem>
							<!-- <fb:FilterGroupItem groupName="__$INTERNAL$" name="B" label="EmployeeID" labelTooltip="Tooltip Example" partOfCurrentVariant="true" visibleInFilterBar="true">
								<fb:control>
									<Input id="employeeID"
									placeholder="Employee ID"/>
								</fb:control>
							</fb:FilterGroupItem> -->
						</fb:filterGroupItems>	
					</fb:FilterBar>		
				</f:DynamicPageHeader>
			</f:header>
<!-- O oModelList>/items é a minha JasonModel do qual recebeu os valores do meu filtro criado no controller. oModelList é o JsonModel e o /items é o nome da 
minha variável que possui a visualização dos dados filtrados, ou seja, virou uma propriedade da JsonModel -->
			<f:content >
				<Table id="idTable"
					   inset="false"
					   growing="true"
					   growingScrollToLoad = "true"
					   growingThreshold = "10"
					   mode="SingleSelectMaster"
					   selectionChange="navToDetail"> 
					<headerToolbar>
						<Toolbar>
							<Title text="{i18n>order}" level="H2"/>
						</Toolbar>
					</headerToolbar>
					<columns>
						<Column>
							<Text text="{i18n>CustomerID}"/>
						</Column>
						<Column minScreenWidth="small">
							<Text text="EmployeeID" />
						</Column>
						<Column minScreenWidth="small">
							<Text text="OrderDate" />
						</Column>
						<Column minScreenWidth="small">
							<Text text="RequiredDate" />
						</Column>
						<Column minScreenWidth="small">
							<Text text="ShippedDate" />
						</Column>
						<Column minScreenWidth="small">
							<Text text="ShipVia" />
						</Column>
						<Column minScreenWidth="small">
							<Text text="Freight" />
						</Column>
						<Column>
							<Text text="ShipName" />
						</Column>
						</columns>
						<dependents>
							<ColumnListItem id="ColumnListItem" highlight="{path: '', formatter: '.Highlight'}">
								<cells>
									<Label text="{CustomerID}" />
									<Label text="{EmployeeID}" />
									<Label text="{path: 'OrderDate' , formatter: '.formatacaoData'}" />
									<Label text="{path: 'RequiredDate' , formatter:'.formatacaoData'}" />
									<Label text="{path: 'ShippedDate',formatter: '.formatacaoData'}" />
									<Label text="{ShipVia}" />
									<Label text="{Freight}" />
									<Label text="{ShipName}" />
								</cells>
							</ColumnListItem>
						</dependents>
				</Table>
			</f:content>
		</f:DynamicPage>
</mvc:View>
